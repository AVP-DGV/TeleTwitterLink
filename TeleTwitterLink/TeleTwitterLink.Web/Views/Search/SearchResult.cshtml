@model TeleTwitterLink.Web.Models.SearchViewModels.SearchResultsViewModel

@{
    ViewData["Title"] = "Search result";
}

<br />
@if (@Model.SearchResults.Count() != 0)
{
    foreach (var result in Model.SearchResults)
    {
        <div class="col-sm-4 col-xs-8">
            <div class="panel panel-default text-center">
                <div class="panel-heading">
                    <h1>@result.Name</h1>
                </div>
                <div class="panel-body">
                    <p><strong>FollowersCount: </strong>@result.FollowersCount</p>
                    <p><strong>FriendsCount: </strong> @result.FriendsCount</p>
                </div>
            </div>
        </div>
    }
}
